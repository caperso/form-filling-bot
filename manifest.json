{
  "name": "Form Filling Bot",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "contextMenus",
    "declarativeContent",
    "storage",
    "cookies",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/ui/index.html",
    "default_icon": "src/assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["src/js/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
